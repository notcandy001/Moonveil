    "cpu": {
        "format": "ó°» ",
        "tooltip": true
    },
    /*---------------Memory------------------*/
    "memory": {
        "format": "î¿…"
    },
    /*---------------Temperature-------------*/
    "temperature": {
        "critical-threshold": 80,
        "format": "ï‹‰"
    },
    /*---------------Tray--------------------*/
    "tray": {
        "icon-size": 14,
        "spacing": 10
    }
}
